    <% layout('layouts/boilerplate') %> 
    <h1>ALL CUSTOMERS</h1>
    
        <% for(let customer of customers ) {%>
            <div class="card" mb-3 style="margin: 8px;box-shadow: 3px -3px 2px 0 rgb(0 0 0 / 15%);
            background-color: #e1e8f6;">
                    <div class="col-12">
                        <div class="card-body">
                            <h5 class="card-title"><%= customer.name %> </h5>
                            <p class="card-text"><%= customer.address %></p>
                            <h5 class="card-text">Rs <%= customer.number %></h5>
                            <a class="btn btn-primary" href="/customers/<%=customer._id%>">View Activity</a>
                        </div>
                    </div>  
            </div>
        <% } %>      
    
