<% layout('layouts/boilerplate') %>
<div class="container-fluid">
    <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="position-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <% if(currentUser){ %>
                    
                    <a class="nav-link" aria-current="page" href="/activityadd">
                        <span data-feather="home"></span>Add activity
                    </a>
                <% } %>
              
            </li>
            <li class="nav-item">
                <% if(currentUser){ %>
                    
                    <a class="nav-link" aria-current="page" href="/customers/<%=customer._id%>/edit">
                        <span data-feather="home"></span> Edit customer
                    </a>
                <% } %>
              
            </li>
            <li class="nav-item">
                <% if(currentUser){ %>
                    
                    <a class="nav-link" aria-current="page" href="/customers/<%=customer._id%>?_method=DELETE">
                        <span data-feather="home"></span> Delete customer
                    </a>
                <% } %>
              
            </li>
           
          </ul>
        </div>
      </nav>
  
<div class="row">   
        
        <% for(let activity of customer.activitis) { %>
            <div class="container-fluid">
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            
                  <h2>Your Activity</h2>
                  <div class="table-responsive">
                    <table class="table table-striped table-sm">
                      <thead>
                        <tr>
                          <th scope="col">Sl no.</th>
                          <th scope="col">Date</th>
                          <th scope="col">Sub-customer</th>
                          <th scope="col">Items</th>
                          <th scope="col">Total bill</th>
                          <th scope="col">Given</th>
                          <th scope="col">Remaining</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td><%= activity.author.username%></td>
                          <td><%= activity.date</td>
                          <td><%= activity.subuser%></td>
                          <td><%= activity.items%></td>
                          <td><%= activity.total%></td>
                          <td><%= activity.given%></td>
                          <td><%= activity.remaining%></td>
                          <td> <button>pay</button> </td>
                        </tr>
                       
                      </tbody>
                    </table>
                  </div>
                </main> 
            </div>
            <% } %>
    </div>
    </div>
</div>


   
